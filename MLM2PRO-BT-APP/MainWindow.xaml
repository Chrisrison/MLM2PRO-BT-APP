<Window x:Class="MLM2PRO_BT_APP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MLM2PRO_BT_APP"
        Title="MLM2PRO Bluetooth Connector" Height="720" Width="1280" ResizeMode="CanMinimize">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Height="30" FontSize="14">
            <MenuItem Header="Exit" Click="Exit_Click" Margin="5" FontSize="14"/>
            <MenuItem Header="Home" Click="Home_Click" Margin="5"/>
            <MenuItem Header="Settings" Click="Settings_Click" Margin="5"/>
            <MenuItem Header="About" Click="About_Click" Margin="5"/>
            <MenuItem Header="Buy me a coffee" Click="Coffee_Click" HorizontalAlignment="Right" Margin="5"/>
            <MenuItem Header="Debug Console" Click="Button_Toggle_DebugConsole"/>
        </Menu>
        
        <Frame x:Name="MainContentFrame" NavigationUIVisibility="Hidden" Background="#FF313131"/>
        
    </DockPanel>
</Window>
